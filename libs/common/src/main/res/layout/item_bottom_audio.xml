<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_74"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:text="1"
        android:textColor="@color/hui9"
        android:textSize="@dimen/sp_12"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_order_num"
        app:layout_constraintTop_toTopOf="@id/tv_order_num"
        android:layout_marginStart="@dimen/dp_10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/hui3"
        android:textSize="@dimen/sp_14"
        android:text="来长沙不到五一广场是一种遗憾"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_time"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/icon_time"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_time"
        app:layout_constraintTop_toTopOf="@id/iv_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_time"
        android:layout_marginStart="@dimen/dp_5"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/hui6"
        android:text="3:05"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/iv_time"
        app:layout_constraintTop_toTopOf="@id/iv_time"
        android:layout_marginStart="@dimen/dp_56"
        android:src="@drawable/icon_play"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_play"
        app:layout_constraintTop_toTopOf="@id/iv_play"
        app:layout_constraintBottom_toBottomOf="@id/iv_play"
        android:layout_marginStart="@dimen/dp_2"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/hui6"
        android:text="1万"/>

</androidx.constraintlayout.widget.ConstraintLayout>